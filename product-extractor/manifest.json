{
  "manifest_version": 3,
  "name": "Product Data Extractor",
  "version": "2.0",
  "description": "Extracts product data from Craigslist, eBay, and Facebook Marketplace",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://cdn.jsdelivr.net/*",
    "https://tessdata.projectnaptha.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Extract Product Data"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["worker.min.js", "tesseract.min.js"],
    "matches": ["<all_urls>"]
  }]
}